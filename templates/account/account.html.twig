{% extends 'base.html.twig' %}
{% block title %}Account{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('account') }}
{% endblock %}

{% block content %}
    <img class="header-banner" src="{{'images/apropos/banner.jpeg'}}">
    <div class="box-profil">

    </div>
    <div class="container">
        <div class="row">
            <div class="left col-md-4">
                <div id="nav-account">
                    <div class="nav-item-account"><a href="#coor">Mes Coordonnées</a></div>
                    <div class="nav-item-account"><a href="#mquizz">Mes Quizzs</a></div>
                    <div class="nav-item-account"><a href="#mcritk">Mes Critik</a></div>
                    <div class="nav-item-account"><a href="#mscore">Mes Scores</a></div>
                    <div class="nav-item-account">Créer Quizz</div>
                    <div class="nav-item-account"><a href="#createdrama">Ajout Drama</a></div>
                    <div class="nav-item-account"><a href="#validquizz">Validation quizz</a></div>

                </div>
            </div>
            <div class="right col-md-8 coord"  id="coor">
                <div class="col-lg-6 col-md-12 mx-auto mbr-form">
                    <!--Formbuilder Form-->
                    <form action="#" method="POST" class="mbr-form form-with-styler" data-form-title="Form Name">
                        <div class="dragArea form-row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <h2 class="mbr-fonts-style pb-2 display-5">Changer Mes Coordonnées</h2>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12" data-for="pseudo">
                                <input name="text" placeholder="Pseudo" class="form-control display-7">
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 form-group align-center">
                                <div class="form-row">
                                    <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                                        <input type="text" name="nameFirst" placeholder="Prénom" class="form-control text-multiple" value="">
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-12 form-group">
                                        <input type="text" name="nameLast" placeholder="Nom" class="form-control text-multiple" value="">
                                    </div>
                                </div>
                            </div>
                            <div data-for="phone" class="col-lg-6 col-md-12 col-sm-12 form-group" style="">
                                <input type="text" name="phone" placeholder="00 00 00 00 00" class="form-control display-7" value="">
                            </div>
                            <div data-for="email" class="col-lg-6 col-md-12 col-sm-12 form-group" style="">
                                <input type="email" name="email" placeholder="Email" class="form-control display-7" value="">
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12" data-for="message">
                                <input name="password" placeholder="Mot de passe" class="form-control display-7">
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12" data-for="message">
                                <input name="password" placeholder="Confirme mot de passe" class="form-control display-7">
                            </div>
                            <div class="col-auto m-auto pt-5"><button type="submit" class="btn btn-submit display-7">ENVOYER</button></div>
                        </div>
                    </form>
                    <!--Formbuilder Form-->
                </div>
            </div>
        </div>
    </div>
{% endblock %}


