{% extends 'base.html.twig' %}

{% block title %}
    Cr√©ation de Question
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('quizzCreate') }}
    {% if img is defined %}
        <style>
            body {
                background: center no-repeat url({{ asset('uploads/imageQuizz/'~ img) }});
                background-size: cover;
            }
        </style>
    {% endif %}
{% endblock %}



{% block content %}

    {% if (question is defined) and (nombre is defined) %}
        {{ form_start(formquest) }}
        <div class="container-sm p-5" id="boxcreate" role="group" aria-label="Basic input text group">

            <div class="form-floating">
                {{ form_widget(formquest.question, {'id': 'floatingInput', 'attr': {'class':'form-control'}, 'value': question.qtQuestion }) }}
                <label for="floatingInput">Enonce de la Question</label>
            </div>

            {% for choice in question.choices %}
            {% if choice.chTrue == true %}
            <div class="input-group p-3">
                <span class="input-group-text" style="background-color: lightgreen" id="Choix1">Correcte</span>
                {{ form_widget(formquest.choice1, {'attr': {'class':'form-control'}, 'value': choice.chChoice}) }}
            </div>

            {% else %}

            <div class="input-group p-3">
                <span class="input-group-text" id="Choix{{ loop.index }}">Fausse</span>
                {{ form_widget(formquest['choice' ~ loop.index], {'attr': {'class':'form-control'}, 'value': choice.chChoice}) }}
            </div>

            {% endif %}
            {% endfor %}

            <button type="submit" name="submit" class="btn next">

                {% if nombre==1 %}
                    Soumettre  <i class="fa fa-arrow-right" id="nxtqst"></i>
                {% else %}
                    Next Question  <i class="fa fa-arrow-right" id="nxtqst"></i>
                {% endif %}
            </button>
        </div>
        {{ form_end(formquest) }}
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('quizzCreate') }}
    {{ parent() }}
{% endblock %}