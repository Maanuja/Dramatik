{% extends 'base.html.twig' %}
{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div class="text-center">
        <div class="form-signin">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser votre mot de passe</h1>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email,{
                'attr': {
                    'placeholder': "Emails"
                }
            }) }}
            <div>
                <small> Entrez votre adresse e-mail et nous vous enverrons un
                    lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-g btn-round">Recevoir un mail</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
